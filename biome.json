{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "performance": {
                "noBarrelFile": "error",
                "noAccumulatingSpread": "error",
                "noDelete": "error",
                "noReExportAll": "error"
            }
        }
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded"
        }
    },
    "json": {
        "formatter": {
            "indentSize": 4,
            "enabled": true,
            "indentStyle": "space"
        }
    }
}
